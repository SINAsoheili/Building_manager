<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputLayout_outLine" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/til_stroke_color</item>
        <item name="boxBackgroundColor">@color/til_background_color</item>
        <item name="hintTextColor">@color/til_hint_color</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="textView_UserInfo_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

    <style name="user_gide" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/big_margin</item>
    </style>
    
    <style name="section_divider" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/section_divider</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

    <style name="actionBar_title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_very_big</item>
        <item name="android:textColor">@color/actionBar_text_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

</resources>