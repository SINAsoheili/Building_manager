<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardView_list_style" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="userProfile_card_style" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:layout_marginLeft">@dimen/big_margin</item>
        <item name="android:layout_marginRight">@dimen/big_margin</item>
        <item name="elevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/user_profile_card_radius</item>
    </style>

    <style name="cardveiw_actionBar" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_action_bar</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/card_radius_action_bar</item>
    </style>


</resources>