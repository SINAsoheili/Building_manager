<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <ListView
        android:id="@+id/lv_userDashboard_repair_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:divider="@null"
        />

    <ImageView
        android:id="@+id/iv_userDashboard_repair_refresh"
        android:layout_width="@dimen/refresh_btn_dimen"
        android:layout_height="@dimen/refresh_btn_dimen"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_refresh"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/pb_userDashboard_repair_progressBar"
        android:layout_width="@dimen/refresh_btn_dimen"
        android:layout_height="@dimen/refresh_btn_dimen"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_userDashboard_repair_emptyRepair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/empty_repair_list"
        android:visibility="gone"
        />

</RelativeLayout>