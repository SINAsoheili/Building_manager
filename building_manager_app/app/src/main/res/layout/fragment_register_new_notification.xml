<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/et_fragment_registerNewNotification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/medium_margin"
        />

    <EditText
        android:id="@+id/et_fragment_registerNewNotification_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_fragment_registerNewNotification_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:lines="10"
        android:layout_margin="@dimen/medium_margin"
        />

    <Button
        android:id="@+id/btn_fragment_registerNewNotification_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_fragment_registerNewNotification_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/submit"
        />

</androidx.constraintlayout.widget.ConstraintLayout>