<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <EditText
        android:id="@+id/et_fragment_registerNewReceipt_idReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="@dimen/medium_margin"
        android:hint="@string/fragment_registerNewReceipt_idReceipt"
        />

    <EditText
        android:id="@+id/et_fragment_registerNewReceipt_idPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="@dimen/medium_margin"
        android:hint="@string/fragment_registerNewReceipt_idPayment"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_fragment_registerNewReceipt_payDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:layout_margin="@dimen/medium_margin"
            android:hint="@string/fragment_registerNewReceipt_payDate"
            />

        <EditText
            android:id="@+id/et_fragment_registerNewReceipt_issueDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:layout_margin="@dimen/medium_margin"
            android:hint="@string/fragment_registerNewReceipt_issueDate"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_fragment_registerNewReceipt_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_margin="@dimen/medium_margin"
            android:hint="@string/fragment_registerNewReceipt_amount"
            />

        <Spinner
            android:id="@+id/spinner_fragment_registerNewReceipt_receiptType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/medium_margin"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_fragment_registerNewReceipt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_margin="@dimen/medium_margin"
        />

</LinearLayout>