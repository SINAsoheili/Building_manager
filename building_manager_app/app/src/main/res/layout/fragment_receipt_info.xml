<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_fragmentReceiptInfo_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_big"
        />

    <TextView
        android:id="@+id/tv_fragmentReceiptInfo_idReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/tv_fragmentReceiptInfo_idPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/tv_fragmentReceiptInfo_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fragmentReceiptInfo_payDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/text_size_medium"
            />


        <TextView
            android:id="@+id/tv_fragmentReceiptInfo_IssueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/text_size_medium"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_fragmentReceiptInfo_delete"
        android:layout_width="@dimen/small_image_size"
        android:layout_height="@dimen/small_image_size"
        android:src="@android:drawable/ic_menu_delete"
        android:scaleType="fitXY"
        />

</LinearLayout>