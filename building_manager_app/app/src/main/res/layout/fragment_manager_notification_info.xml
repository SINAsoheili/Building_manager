<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragmentNotificationInfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_big"
            />

        <TextView
            android:id="@+id/tv_fragmentNotificationInfo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_medium"
            android:lines="8"
            />

        <TextView
            android:id="@+id/tv_fragmentNotificationInfo_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_medium"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_fragmentNotificationInfo_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/fillButton"
        android:text="@string/delete"
        />

</androidx.constraintlayout.widget.ConstraintLayout>