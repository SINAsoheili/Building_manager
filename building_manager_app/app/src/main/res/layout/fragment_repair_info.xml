<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_fragmentRepairInfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="right"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_big"
        />

    <TextView
        android:id="@+id/tv_fragmentRepairInfo_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="right"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/tv_fragmentRepairInfo_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="start"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/tv_fragmentRepairInfo_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:gravity="start"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_medium"
        />

    <ImageView
        android:id="@+id/iv_fragmentRepairInfo_delete"
        android:layout_width="@dimen/small_image_size"
        android:layout_height="@dimen/small_image_size"
        android:layout_margin="@dimen/medium_margin"
        android:src="@android:drawable/ic_menu_delete"
        />

</LinearLayout>