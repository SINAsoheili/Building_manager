<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:padding="@dimen/medium_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            style="@style/section_divider"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            />
        <TextView
            android:id="@+id/tv_fragmentRepairInfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:gravity="right"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_medium"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message"
            style="@style/section_divider"
            android:layout_marginTop="@dimen/very_big_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            />
        <TextView
            android:id="@+id/tv_fragmentRepairInfo_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="8"
            android:layout_margin="@dimen/medium_margin"
            android:gravity="right"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_medium"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/medium_margin"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_fragmentRepairInfo_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_medium"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/payDate"
                style="@style/section_divider"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="start"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/medium_margin"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_fragmentRepairInfo_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_medium"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/amount"
                style="@style/section_divider"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="start"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_fragmentRepairInfo_delete"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_height_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/delete"
        style="@style/fillButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>