<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.sinasoheili.building_manager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/building_intro_slider"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".VIEW.IntroSliderActivity"></activity>
        <activity android:name=".VIEW.UserDashboardActivity" />
        <activity android:name=".VIEW.ManagerRepairActivity" />
        <activity android:name=".VIEW.ManagerReceiptActivity" />
        <activity android:name=".VIEW.ManagerNotificationActivity" />
        <activity android:name=".VIEW.ManagerUnitInfoActivity" />
        <activity android:name=".VIEW.ManagerUnitListActivity" />
        <activity android:name=".VIEW.ManagerBuildingListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>